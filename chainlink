        $(function(){
        	$('#exampleModal').on('show.bs.modal', function(e) { 
				  var wname = $(e.relatedTarget).data('id');
				  var that = $(this);
				  that.find('input[id="wallet_name"]').val(wname) ;  
			});
            $('#exampleModal').on('hidden.bs.modal', function (e) {
              window.location.reload();
            })
        })
